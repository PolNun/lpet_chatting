<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cuando el EditText no tiene el foco -->
    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="1dp" android:left="-5dp" android:right="-5dp" android:top="-50dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/sender" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Cuando el EditText tiene el foco -->
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="1dp" android:left="-3dp" android:right="-3dp" android:top="-50dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/primary" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>